{
  "name": "vibe-merge",
  "displayName": "VibeMerge",
  "description": "Epic 3-way merge editor with Duel System - Resolve git conflicts like a champion! Inspired by IntelliJ IDEA with victory celebrations and score tracking.",
  "version": "0.1.0",
  "publisher": "d3nai",
  "icon": "media/icon.png",
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "keywords": [
    "git",
    "merge",
    "conflict",
    "diff",
    "3-way merge",
    "vibe",
    "duel",
    "intellij",
    "resolver",
    "gamification"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/d3nai/vibe-merge"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vibeMerge.openMergeEditor",
        "title": "Open Merge Editor",
        "category": "VibeMerge",
        "icon": "$(git-merge)"
      },
      {
        "command": "vibeMerge.resolveConflicts",
        "title": "Resolve All Conflicts",
        "category": "VibeMerge",
        "icon": "$(check-all)"
      },
      {
        "command": "vibeMerge.acceptLeft",
        "title": "Accept Current (Left)",
        "category": "VibeMerge",
        "icon": "$(arrow-right)"
      },
      {
        "command": "vibeMerge.acceptRight",
        "title": "Accept Incoming (Right)",
        "category": "VibeMerge",
        "icon": "$(arrow-left)"
      },
      {
        "command": "vibeMerge.acceptBoth",
        "title": "Accept Both Changes",
        "category": "VibeMerge",
        "icon": "$(fold)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "vibeMerge.openMergeEditor",
          "when": "vibeMerge.hasConflicts",
          "group": "navigation"
        }
      ],
      "scm/resourceState/context": [
        {
          "command": "vibeMerge.openMergeEditor",
          "when": "scmProvider == git",
          "group": "inline"
        }
      ]
    },
    "keybindings": [
      {
        "command": "vibeMerge.openMergeEditor",
        "key": "ctrl+alt+m",
        "mac": "cmd+alt+m"
      },
      {
        "command": "vibeMerge.acceptLeft",
        "key": "ctrl+shift+left",
        "mac": "cmd+shift+left",
        "when": "vibeMerge.editorActive"
      },
      {
        "command": "vibeMerge.acceptRight",
        "key": "ctrl+shift+right",
        "mac": "cmd+shift+right",
        "when": "vibeMerge.editorActive"
      }
    ],
    "configuration": {
      "title": "VibeMerge",
      "properties": {
        "vibeMerge.autoApplyNonConflicting": {
          "type": "boolean",
          "default": true,
          "description": "Automatically apply non-conflicting changes"
        },
        "vibeMerge.showLineNumbers": {
          "type": "boolean",
          "default": true,
          "description": "Show line numbers in the merge editor"
        },
        "vibeMerge.highlightSyntax": {
          "type": "boolean",
          "default": true,
          "description": "Enable syntax highlighting in the merge editor"
        },
        "vibeMerge.syncScroll": {
          "type": "boolean",
          "default": true,
          "description": "Synchronize scrolling between panels"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "diff": "^5.1.0"
  }
}
